{
  "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "*": [
          "*",
          "./src/*",
        ]
      },
      "typeRoots": [
        "./node_modules/@types",
        "./typings/*.d.ts"
    ],
    
      "importHelpers": true,
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "checkJs": false,
      "jsx": "react",
      "removeComments": true,
      "noEmit": true,
      "pretty": true,
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "./dist/",
      "declaration": true,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "alwaysStrict": true,
      "preserveConstEnums": true,
      "keyofStringsOnly": true,
      "sourceMap": true,
  },
  "include": [
    "./typings/index.d.ts",
    "@types/**/*.d.ts",
    "src/**/*.ts"
],
  "exclude": [
      "node_modules"
  ]
}

