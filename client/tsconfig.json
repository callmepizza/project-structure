{
  "compilerOptions": {
      "baseUrl": "./src",
      "paths":{
        "common":["./src/common/*"],
        "pages":["./src/pages/*"] ,
        "abstraction":["./src/abstraction/*"],
        "routes":["./src/routes/*"] ,
      },
      "importHelpers": true,
      "module": "commonjs",
      "target": "es5",
      "allowJs": true,
      "checkJs": false,
      "jsx": "react",
      "removeComments": true,
      "noEmit": true,
      "pretty": true,
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "./dist/",
  },
  "exclude": [
      "node_modules"
  ]
}

